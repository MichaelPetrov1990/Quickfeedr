<div class="container">
  <h1>Dashboard</h1>

<div class="search">

  <div class="search-form">
    <%= form_tag dashboard_path, method: :get, class: "rel", id: "form" do %>
    <input type="text" name="query" class="form-control rel" placeholder="Search jobs you've posted..." >
    <i class="fa fa-search tb"></i>
    <% end %>
  </div>

    <br>

  <div>

    <div>
      <button class=""><%= link_to "Create", new_job_path %></button>
    </div>

  </div>

</div>

<div class="d-flex justify-content-around" >
    <% @jobs.each do |job| %>
    <div class="example-1 recruitment-card my-3">
      <div class="wrapper">

        <div class="recruitment-date">
          <span class="day"><%= job.created_at.strftime("%d-%m-%Y") %></span>
        </div>

        <div class="data">
          <div class="content">
            <span class="author"><%= job.title %></span>
            <h1 class="title"><a href="#" class="cardTitle"><%= job.description %></a></h1>
            <p class="text"><%= job.location %>, <%= job.salary %> GBP </p>
            <button><%= link_to "Delete", job_path(job), method: :delete %></button>
            <button><%= link_to "Edit", edit_job_path(job) %></button>
            <button><%= link_to "View applications" , job_job_applications_path(job), class: 'applicant_show' %></button>
          </div>
        </div>
      </div>
    </div>
    <% end %>


</div>

</div>

<script>
  document.querySelector(".tb").addEventListener("click", () => {
    document.getElementById("form").submit();
  })
</script>
